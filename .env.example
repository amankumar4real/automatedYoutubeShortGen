# Script & voice
OPENAI_API_KEY=sk-...
ELEVEN_API_KEY=...
XAI_API_KEY=...

# Server
NODE_ENV=development
PORT=4000

# Auth & DB (required for API; in production set these)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=shorts

# MongoDB auth (Docker): required for docker-compose so mongo runs with --auth. Must match user/pass in MONGODB_URI.
# When using Docker, set MONGODB_URI=mongodb://USER:PASS@mongo:27017/shorts?authSource=admin (same USER/PASS as below).
MONGO_INITDB_ROOT_USERNAME=
MONGO_INITDB_ROOT_PASSWORD=

JWT_SECRET=change-me-in-production

# R2 (optional; for project asset storage)
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=

# Optional – stable URL (see deploy/NAMED-TUNNEL.md)
# TUNNEL_TOKEN=

# Optional
BACKGROUND_MUSIC_PATH=temp/background_music.mp3
# RUN_STEP — leave unset for full pipeline; set to 1|2|3|4 to run only that step
PORT=4000
TEST_MODE=false
